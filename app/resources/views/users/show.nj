{% extends '../../layouts/default.nj' %}
{% set title = 'Detail User' %}

{% block body %}
  {% include "../../partials/header.nj" %}

  <main class="p-8">
    <h1 class="font-bold text-3xl">Detail User</h1>

    <ul class="py-8">
      <li>
        <b>Name: </b>
        {{ user.name }}
      </li>
      <li>
        <b>E-mail: </b>
        {{ user.email }}
      </li>
    </ul>

    <a href="/users" class="hover:underline hover:underline-offset-4">Voltar</a>
  </main>
{% endblock %}
