{
  "name": "hefestos-app",
  "version": "1.0.0",
  "description": "Hefestos application template",
  "author": "lucasnjsilva",
  "license": "ISC",
  "keywords": [
    "hefestosjs",
    "hefestos",
    "mvc"
  ],
  "main": "dist/start/server.js",
  "scripts": {
    "delete-dist": "rm -rf ./dist",
    "transpile": "tsc && tsc-alias",
    "copy-files": "mkdir -p ./dist/app/resources && cp -r ./app/resources/* ./dist/app/resources",
    "build": "npm-run-all delete-dist transpile copy-files",
    "start": "node dist/start/server.js",
    "dev": "clear && npm-run-all --parallel monitor:server monitor:tailwind",
    "dev:s": "clear && npm-run-all --parallel dev studio",
    "monitor:server": "nodemon --exec tsx start/server.ts",
    "monitor:tailwind": "npx tailwindcss -i public/css/tailwind.css -o public/css/styles.css --watch",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "coverage": "jest --coverage",
    "g": "plop",
    "studio": "prisma studio",
    "seed": "prisma db seed"
  },
  "prisma": {
    "schema": "app/database/schema.prisma",
    "seed": "ts-node app/database/seeds"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/aws-sdk": "^2.7.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.12",
    "@types/method-override": "^0.0.35",
    "@types/minimist": "^1.2.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/multer-s3": "^3.0.3",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/nunjucks": "^3.2.6",
    "@types/uuid": "^9.0.8",
    "esbuild": "0.20.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "plop": "^4.0.1",
    "prisma": "^5.9.1",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "autoprefixer": "^10.4.17",
    "aws-sdk": "^2.1550.0",
    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "method-override": "^3.0.0",
    "minimist": "^1.2.8",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.9",
    "nunjucks": "^3.2.4",
    "rotating-file-stream": "^3.2.1",
    "zod": "^3.22.4"
  }
}
